<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-init-method="init">

  <!-- Specific configuration details that vary between deployments -->

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="properties">
      <value>
        wayback.host=${HOSTNAME}
        wayback.port=${wayback.port}
        wayback.urlprefix=https://www.webarchive.org.uk/act/wayback/

        wayback.basedir=/mnt/store/qa-wayback

        wayback.cdx.folder=${wayback.basedir}/cdx-index
        wayback.httpfs.prefix=http://192.168.45.13:14000
        wayback.dls.mapping.file=${wayback.basedir}/dls-mapping.txt
        wayback.ld.surts.file=${wayback.basedir}/ld-surts.txt
        wayback.exclude.file=${wayback.basedir}/exclude.txt
        wayback.embargo=-1
      </value>
    </property>
    <property name="searchSystemEnvironment" value="true" />
  </bean>

  <!-- uk.bl.wa.wayback.replay.RedirectRewritingInlineHttpHeaderProcessor -->      
      
</beans>
