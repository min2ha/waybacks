<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-init-method="init">

  <!-- Specific configuration details that vary between deployments -->

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="properties">
      <value>
        wayback.basedir=${wayback.basedir}
        wayback.host=${HOSTNAME}
        wayback.port=${wayback.port}
        wayback.urlprefix=http://${wayback.host}:${wayback.port}/
        wayback.resourcestore.prefix=http://${wayback.resourcestore.prefix}/
        wayback.cdx.name=${wayback.cdx.name}
      </value>
    </property>
    <property name="searchSystemEnvironment" value="true" />
  </bean>

  <!-- uk.bl.wa.wayback.replay.RedirectRewritingInlineHttpHeaderProcessor -->      
      
</beans>
