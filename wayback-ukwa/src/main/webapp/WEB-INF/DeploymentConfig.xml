<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-init-method="init">

  <!-- Specific configuration details that vary between deployments -->

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="properties">
      <value>
        wayback.protocol=systemEnvironment['WAYBACK_PROTOCOL']
        wayback.host=systemEnvironment['WAYBACK_HOST']
        wayback.port=systemEnvironment['WAYBACK_PORT']
        wayback.service=systemEnvironment['WAYBACK_SERVICE']
        wayback.httpfs.prefix=systemEnvironment['WAYBACK_HTTPFS_PREFIX']
        
        wayback.urlprefix=${wayback.protocol}://${wayback.host}${wayback.port}/${wayback.service}
        wayback.basedir=/mnt/store/${wayback.service}
        wayback.cdx.folder=${wayback.basedir}/cdx-index
        wayback.dls.mapping.file=${wayback.basedir}/dls-mapping.txt
        wayback.ld.surts.file=${wayback.basedir}/ld-surts.txt
        wayback.exclude.file=${wayback.basedir}/exclude.txt
        wayback.embargo=-1
      </value>
    </property>
    <property name="searchSystemEnvironment" value="true" /> <!-- e.g. wayback.host=${HOSTNAME}  -->
  </bean>

  <!-- uk.bl.wa.wayback.replay.RedirectRewritingInlineHttpHeaderProcessor -->      
      
</beans>